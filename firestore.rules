rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Правила для коллекции игроков (supports both nickname-based and Firebase Auth)
    match /players/{playerId} {
      // Разрешить чтение всем (для лидерборда и nickname-based системы)
      allow read: if true;
      // Разрешить запись всем (для nickname-based регистрации)
      allow write: if true;
      // В будущем можно добавить более строгие правила для Firebase Auth:
      // allow write: if request.auth != null && request.auth.uid == playerId;
    }
    
    // Правила для коллекции матчей
    match /matches/{matchId} {
      // Всем можно читать результаты матчей
      allow read: if true;
      // Только аутентифицированные пользователи могут создавать записи матчей
      allow create: if request.auth != null;
      // Никто не может изменять или удалять результаты матчей
      allow update, delete: if false;
    }
    
    // Запретить доступ ко всем остальным коллекциям
    match /{document=**} {
      allow read, write: if false;
    }
  }
} 